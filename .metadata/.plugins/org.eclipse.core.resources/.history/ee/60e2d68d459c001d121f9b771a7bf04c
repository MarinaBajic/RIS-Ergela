package com.example.demo.controller;

import java.util.Date;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import com.example.demo.repository.TrenerRepository;

import model.Jahac;
import model.Trener;

@Controller
@RequestMapping(value="/treneri")
public class TrenerKontroler {

	@Autowired
	TrenerRepository trenerRepo;
	
	@PostMapping(value="/unesiTrenera")
	public String unesiTrenera(String ime, String prezime, String adresa, Date datumRodjenja, Integer idTrener, HttpServletRequest request) {
		Trener trener = trenerRepo.findById(idTrener).get();
		
		Jahac j = new Jahac();
		j.setIme(ime);
		j.setPrezime(prezime);
		j.setAdresa(adresa);
		j.setDatumRodjenja(datumRodjenja);
		j.setDatumUpisa(new Date());
		j.setTrener(trener);
		
		Jahac jahac = jahacRepo.save(j);
		request.setAttribute("jahac", jahac);
		return "unos/UnosJahaca";
	}
}
